<?xml version="1.0" encoding="utf-8" ?>
<!-- These patches set the exceptions of the mod settings. The same patching method can be used for other mods that add animals and want default options for them. 
Two patch operations per animal are needed for vanilla animals to ensure compatibility with mods that add comps. Note that this is probably not needed for patches of other mods that add animals-->
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationInsert">
				<xpath>/Defs/PawnTableDef[defName="Animals"]/columns/li[last()-1]</xpath>
				<value>
					<li>MountableByAnyone</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<success>Always</success>
				<xpath>Defs/ThingDef[defName="Ostrich" or 
					defName="Emu" or 
					defName="Caribou" or
					defName="Ibex" or 
					defName="Cougar" or 
					defName="Panther" or
					defName="LabradorRetriever" or 
					defName="Alpaca" or 
					defName="Elk" or 
					defName="Horse" or 
				defName="Thrumbo"][not(comps)]</xpath>
				<value>
					<comps />
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Ostrich"]/comps</xpath>
				<value>
					<li Class="GiddyUp.CompProperties_Overlay">
						<overlayFront>
							<graphicDataDefault>
								<texPath>Things/Pawn/Ostrich_overlay_south</texPath>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>1.8</drawSize>
								<drawRotated>false</drawRotated>
							</graphicDataDefault>
							<offsetDefault>(0,0,0,0)</offsetDefault>
						</overlayFront>
					</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Emu"]/comps</xpath>
				<value>
					<li Class="GiddyUp.CompProperties_Overlay">
						<overlayFront>
							<graphicDataDefault>
								<texPath>Things/Pawn/Emu_overlay_south</texPath>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>1.6</drawSize>
								<drawRotated>false</drawRotated>
							</graphicDataDefault>
							<offsetDefault>(0,0,0,0)</offsetDefault>
						</overlayFront>
						
					</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Caribou"]/comps</xpath>
				<value>
					<li Class="GiddyUp.CompProperties_Overlay">
						<overlayFront>
							<graphicDataDefault>
								<texPath>Things/Pawn/Caribou_overlay_front</texPath>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>4.38</drawSize>
								<drawRotated>false</drawRotated>
							</graphicDataDefault>
							<offsetDefault>(0,0,0,0)</offsetDefault>
						</overlayFront>
						<overlaySide>
							<graphicDataDefault>
								<texPath>Things/Pawn/Caribou_overlay_side</texPath>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>4.38</drawSize>
								<drawRotated>false</drawRotated>
							</graphicDataDefault>
							<offsetDefault>(0,0,0,0)</offsetDefault>
						</overlaySide>
					</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Ibex"]/comps</xpath>
				<value>
					<li Class="GiddyUp.CompProperties_Overlay">
						<overlayFront>
							<graphicDataMale>
								<texPath>Things/Pawn/IbexMale_overlay_front</texPath>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>1.8</drawSize>
								<drawRotated>false</drawRotated>
							</graphicDataMale>
							<graphicDataFemale>
								<texPath>Things/Pawn/IbexFemale_overlay_front</texPath>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>1.7</drawSize>
								<drawRotated>false</drawRotated>
							</graphicDataFemale>
							<offsetDefault>(0,0,0,0)</offsetDefault>
						</overlayFront>
						<overlaySide>
							<graphicDataMale>
								<texPath>Things/Pawn/IbexMale_overlay_side</texPath>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>1.8</drawSize>
								<drawRotated>false</drawRotated>
							</graphicDataMale>
							<graphicDataFemale>
								<texPath>Things/Pawn/IbexFemale_overlay_side</texPath>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>1.7</drawSize>
								<drawRotated>false</drawRotated>
							</graphicDataFemale>
							<offsetDefault>(0,0,0,0)</offsetDefault>
						</overlaySide>
					</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Cougar"]/comps</xpath>
				<value>
					<li Class="GiddyUp.CompProperties_Overlay">
						<overlayFront>
							<graphicDataDefault>
								<texPath>Things/Pawn/Cougar_overlay_south</texPath>
								<color>(177,136,112)</color>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>2.18</drawSize>
								<drawRotated>false</drawRotated>
							</graphicDataDefault>
							
							<offsetDefault>(0,0,0,0)</offsetDefault>
						</overlayFront>
					</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Panther"]/comps</xpath>
				<value>
					<li Class="GiddyUp.CompProperties_Overlay">
						<overlayFront>
							<graphicDataDefault>
								<texPath>Things/Pawn/Cougar_overlay_south</texPath>
								<color>(60,60,60)</color>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>2.12</drawSize>
								<drawRotated>false</drawRotated>
							</graphicDataDefault>
							<offsetDefault>(0,0,0,0)</offsetDefault>
						</overlayFront>
					</li>
				</value>
			</li>
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/ThingDef[defName="LabradorRetriever"]</xpath>
				<value>
					<li Class="GiddyUp.DrawOverride">
						<isException>true</isException>
					</li>
				</value>
			</li>
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/ThingDef[defName="Alpaca" or defName="Elk" or defName="Thrumbo"]</xpath>
				<value>
					<li Class="GiddyUp.DrawOverride">
						<drawFront>true</drawFront>
					</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/StatDef[defName="ArmorRating_Sharp" or defName="ArmorRating_Blunt"]/parts</xpath>
				<value>
					<li Class="GiddyUp.Stats.StatPart_Armor">
						<priority>999</priority>
					</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/StatDef[defName="MoveSpeed"]/parts</xpath>
				<value>
					<li Class="GiddyUp.Stats.StatPart_Riding"/>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/DesignationCategoryDef[defName="Zone"]/specialDesignatorClasses</xpath>
				<value>
					<li>GiddyUpRideAndRoll.Zones.Designator_GU_DropAnimal_Expand</li>
					<li>GiddyUpRideAndRoll.Zones.Designator_GU_DropAnimal_Clear</li>
					<li>GiddyUpRideAndRoll.Zones.Designator_GU_NoMount_Expand</li>
					<li>GiddyUpRideAndRoll.Zones.Designator_GU_NoMount_Clear</li>
					<li>GiddyUpCaravan.Zones.Designator_GU_DropAnimal_NPC_Expand</li>
					<li>GiddyUpCaravan.Zones.Designator_GU_DropAnimal_NPC_Clear</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Horse"]/comps</xpath>
				<value>
					<li Class="GiddyUp.CompProperties_Overlay">
						<overlayFront>
							<graphicDataDefault>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>2.1</drawSize>
								<drawRotated>false</drawRotated>
							</graphicDataDefault>
							<allVariants>
								<li><texPath>Things/Pawn/Horse_overlay_south</texPath></li>
								<li><texPath>Things/Pawn/Horse1_overlay_south</texPath></li>							
								<li><texPath>Things/Pawn/Horse2_overlay_south</texPath></li>							
								<li><texPath>Things/Pawn/Horse3_overlay_south</texPath></li>							
								<li><texPath>Things/Pawn/Horse4_overlay_south</texPath></li>							
								<li><texPath>Things/Pawn/Horse5_overlay_south</texPath></li>						
								<li><texPath>Things/Pawn/Horse6_overlay_south</texPath></li>
							</allVariants>
							<offsetDefault>(0,0,0,0)</offsetDefault>
						</overlayFront>
					</li>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>